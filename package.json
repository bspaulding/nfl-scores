{
  "private": true,
  "name": "nfl-scores",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "brace-style": [
        2,
        "1tbs"
      ],
			"react/jsx-wrap-multilines": 0
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "fast-async": "^6.3.0",
    "prettier": "^1.7.4",
    "prettier-eslint": "^8.2.1"
  },
  "dependencies": {
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.5"
  }
}
